                    <p></p>
                    <p></p>
                </div>
            {% endfor %}

        </div>

    </div>

    <h1>Already read</h1>
    <hr>

    <div class="row">

        <div class="col-xs-10 col-xs-offset-1">

            {% for book in finishedBooks %}
                <div class="col-lg-2">
                    <a href='/book/{{ book.bookId.id }}'><img src="{{ asset('uploads/' ~ book.bookId.id) }}   " alt="{{ book.bookId.title }}"  class="fotos"></a>
                    <p></p>
                    <p></p>
                </div>
            {% endfor %}

        </div>

    </div>

{% endblock %}
