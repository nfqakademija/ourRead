<!DOCTYPE html>
<html>
<head>
    <title>{% block title %}OurReads{% endblock %}</title>
    <!-- Bootstrap -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {% block stylesheets %}
        <link href="{{ asset('bundles/our/css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/our/css/bootstrap-social.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/our/css/bootstrap-select.min.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/our/css/font-awesome.min.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/our/css/jquery-confirm.min.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/our/css/custom.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/our/css/star-rating.min.css') }}" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('bundles/our/css/index.css') }}" type="text/css" media="screen"/>
    {% endblock %}

    <script>
        {% block inline_scripts %}
        {% endblock %}
    </script>
</head>

<body class="pull_top">

{% include "OurBundle:Components:navigation.html.twig" %}

{% block slider %}
    {% include "OurBundle:Components:slider.html.twig" %}
{% endblock %}

<div id="main" class="container">
    {% block body %} {% endblock %}
    {% block errors %} {% endblock %}
    {% block user %} {% endblock %}
    {% block mybooks %} {% endblock %}
    {% block categories %} {% endblock %}
    {% block addBook %} {% endblock %}
</div>

{% block scripts %}
    <script src="{{ asset('bundles/our/js/jquery.min.js') }}"></script>
    <script src="{{ asset('bundles/our/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('bundles/our/js/bootstrap-select.min.js') }}"></script>
    <script src="{{ asset('bundles/our/js/index-slider.js') }}"></script>
    <script src="{{ asset('bundles/our/js/blockUI.js') }}"></script>
    <script src="{{ asset('bundles/our/js/jquery-confirm.min.js') }}"></script>
    <script src="{{ asset('bundles/our/js/custom.js') }}"></script>
{% endblock %}
</body>
</html>
